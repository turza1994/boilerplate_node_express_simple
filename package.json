{
  "name": "node-express-api",
  "version": "1.0.0",
  "description": "Production-grade Node.js Express API boilerplate",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "drizzle-kit migrate",
    "migrate:generate": "drizzle-kit generate",
    "studio": "drizzle-kit studio",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": ["node", "express", "typescript", "api", "boilerplate"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "pino": "^9.3.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.4.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "drizzle-kit": "^0.25.0",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}